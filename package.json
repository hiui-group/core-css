{
  "name": "@hi-ui/core-css",
  "version": "3.0.0-alpha.1",
  "description": "HiUI core styles, include common component styles, helper classes and typography. i18n supported.",
  "main": "index.scss",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "test": "node_modules/.bin/stylelint --config package.json 'lib/**/*.scss'",
    "fix": "node_modules/.bin/stylelint --config package.json 'lib/**/*.scss' --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hiui-group/core-css.git"
  },
  "keywords": [
    "hiui",
    "css",
    "scss",
    "sass",
    "reset",
    "typography"
  ],
  "author": "HiUI <mi-hiui@xiaomi.com>",
  "license": "MIT",
  "devDependencies": {
    "stylelint": "^13.3.3",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "stylelint-config-standard": "^19.0.0"
  },
  "dependencies": {},
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-sass-guidelines"
    ],
    "rules": {
      "max-nesting-depth": null,
      "at-rule-empty-line-before": null,
      "block-closing-brace-newline-after": [
        "always",
        {
          "ignoreAtRules": [
            "if",
            "else"
          ]
        }
      ],
      "property-no-vendor-prefix": true,
      "value-no-vendor-prefix": true,
      "order/properties-alphabetical-order": null
    }
  }
}
